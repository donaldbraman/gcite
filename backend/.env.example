# gCite Backend Configuration
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=["https://script.google.com","https://docs.google.com"]

# cite-assist Integration
CITE_ASSIST_API_URL=http://localhost:8000
CITE_ASSIST_API_KEY=

# Gemini AI (Phase 2)
GOOGLE_GENAI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash-lite

# Agent Configuration (Phase 2)
AGENT_FILTER_THRESHOLD=0.7
AGENT_MAX_CHUNKS=20
AGENT_TIMEOUT_SECONDS=5

# Caching (Future)
CACHE_ENABLED=false
CACHE_TTL_SECONDS=3600
